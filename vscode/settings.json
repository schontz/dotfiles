{
  "telemetry.telemetryLevel": "off",
  "editor.wordWrap": "on",
  "terminal.external.osxExec": "iTerm.app",
  "html.autoClosingTags": false,
  "workbench.tree.indent": 16,
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-a>": true,
    "<C-k>": true
  },
  "vim.leader": ",",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["<leader>", "q", "f"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["]", "g"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["[", "g"],
      "commands": ["editor.action.marker.prev"]
    }
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.#*": true
  },
  "search.smartCase": true,
  "window.newWindowDimensions": "inherit",
  "search.showLineNumbers": true,
  "todohighlight.isEnable": true,
  "todohighlight.keywords": [
    {
      "text": "TODO",
      "color": "#000",
      "backgroundColor": "rgba(255,189,42,0.8)",
      "overviewRulerColor": "rgba(255,189,42,0.8)"
    },
    {
      "text": "FIXME",
      "color": "#000",
      "backgroundColor": "rgba(240,98,146,0.8)",
      "overviewRulerColor": "rgba(240,98,146,0.8)"
    },
    {
      "text": "NOTE:",
      "color": "#eee",
      "backgroundColor": "rgba(100,100,255,0.8)",
      "overviewRulerColor": "rgba(100,100,255,0.8)"
    }
  ],
  "editor.fontSize": 13,
  "auto-rename-tag.activationOnLanguage": ["html"],
  "editor.autoClosingBrackets": "never",
  "terminal.integrated.fontSize": 15,
  "editor.tabSize": 2,
  "terminal.integrated.rightClickBehavior": "copyPaste",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.formatOnSave": true,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.fontFamily": "'_SF Mono', Menlo, Monaco, 'Courier New', monospace",
  "workbench.fontAliasing": "auto",
  "terminal.integrated.fontFamily": "Menlo",
  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Dracula",
  "workbench.preferredLightColorTheme": "Solarized Light",
  "workbench.colorTheme": "Dracula",
  "emmet.showExpandedAbbreviation": "never",
  "jest.autoRun": "off",
  "window.zoomLevel": 2,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.typegen.ts",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts, ${capture}.typegen.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
    "*.mts": "${capture}.typegen.ts",
    "*.cts": "${capture}.typegen.ts"
  }
}
